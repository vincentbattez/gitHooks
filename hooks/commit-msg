#!/bin/sh
redTxt="\e[91m"
greenTxt="\e[92m"
cyanTxt="\e[96m"
endColor="\e[0m"

printf "\n"$cyanTxt"[commit-msg] - Done "$endColor"\n";

msg=`cat $1`

msg=`echo "$msg" | sed 's/:tada:/ðŸŽ‰/'`
msg=`echo "$msg" | sed 's/:feat:/âœ¨/'`
msg=`echo "$msg" | sed 's/:fix:/ðŸ›/'`
msg=`echo "$msg" | sed 's/:hotfix:/ðŸ”¥/'`
msg=`echo "$msg" | sed 's/:style:/ðŸŽ¨/'`
msg=`echo "$msg" | sed 's/:refactor:/ðŸ’Ž/'`
msg=`echo "$msg" | sed 's/:release:/ðŸ“¦/'`
msg=`echo "$msg" | sed 's/:ci:/ðŸ¤–/'`
msg=`echo "$msg" | sed 's/:build:/ðŸ¤–/'`
msg=`echo "$msg" | sed 's/:test:/âœ…/'`
msg=`echo "$msg" | sed 's/:perf:/âš¡/'`
msg=`echo "$msg" | sed 's/:docs:/ðŸ“–/'`
msg=`echo "$msg" | sed 's/:doc:/ðŸ“–/'`

exit 1
echo "$msg" > $1